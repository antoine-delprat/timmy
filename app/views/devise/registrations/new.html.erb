<div id="devise-back">
  <%= link_to "< retour", root_path, class: "devise-back-link" %>
</div>

  <div class="container-devise">
    <h2 class="text-white">Inscription</h2>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, label: "Prénom", placeholder: "Martin", autofocus: true %>
        <%= f.input :last_name, label: "Nom", placeholder: "Dupont" %>
        <%= f.input :email,
                    placeholder: "martindupont@email.fr",
                    required: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password, label: "Mot de passe",
                    placeholder: "Mot de passe",
                    required: true,
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirmer le mot de passe",
                    placeholder: "Mot de passe",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inscription", class: "btn-devise text-white" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
