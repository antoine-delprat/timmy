<div id="devise-back">
  <%= link_to "< retour", root_path, class: "devise-back-link" %>
</div>
<div class="container-devise">
  <h2 class="text-white">Connexion</h2>
  <br>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  placeholder: "Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe",
                  placeholder: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn-devise text-white" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
